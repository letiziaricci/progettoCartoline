    <text type="cartolina" n="2">
        <body xml:lang="ita">
            
            <div xml:id="fronte_seconda_cartolina"  type="fronte">
                <figure>
                    <pb facs="#front2" n="1" xml:id="fronte-2"/> 
                    <figDesc>
                        <desc> Nella cartolina è rappresentata una fanciulla intenta a pregare in un luogo all'aperto, circondata da fiori colorati.</desc>
                    </figDesc>
                </figure>
            </div>
            
            <div xml:id="retrocartolina10" type="retro">
                
                <pb facs="#back2" n="2" xml:id="back-2"/>
                <head xml:id="scrittastampata2" type="rtr">                
                </head>
                
                <div type="rtrArchivio" xml:id="Archivio2" facs="#numerocartolina">
                    <p> <num type="cardinal"> <idno> 10 </idno> </num> </p>  
                </div>
                
                <div xml:id="secopen" type="rtr"> 
                    
                    <dateline xml:id="data2" facs="#data10">
                        <placeName ref="#ZG">  Zona di guerra </placeName>, <distinct type="forma_desueta"> li <ptr target="#li"/> </distinct> 
                        <date when="1916-11-07"> 7/11-16 </date>
                    </dateline>
                    
                </div>
                
                <div xml:id="testoRetro10"> 
                    <div xml:id="testoresto10" type="rtr">
                        <salute rend="align(left)" xml:id="line1" facs="#riga1">
                            <s>
                                <persName ref="#OT" > <forename> Oliva </forename> </persName> mia,
                            </s>
                        </salute>
                        <p xml:id="line2" facs="#riga2"> <lb/> Godo la freschissima aura <distinct>ch'aleggia<ptr target="#des"/></distinct> </p>
                        <p xml:id="line3" facs="#riga3"> <lb/> nell'ombra d'un castagneto, la godo con </p>
                        <p xml:id="line4" facs="#riga4">  <lb/>Infinita voluttà, con immenso compiacenza.</p> 
                        <p xml:id="line5" facs="#riga5"> <lb/> Vado rileggendo le tue vecchie </p>
                        <p xml:id="line6" facs="#riga6"> <lb/>lettere, illudendo l'amor mio con</p>
                        <p xml:id="line7" facs="#riga7"> <lb/> pietoso <distinct>artifizio<ptr target="des"/></distinct> che giova per altro </p>
                        <p xml:id="line8" facs="#riga8"> <lb/> Ripensare più profondamente sui </p>
                        <p xml:id="line9"  facs="#riga9"> <lb/> Tuoi pensieri, sui tuoi proponimenti,</p>
                        <p xml:id="line10" facs="#riga10"> <lb/> Sulla tua affettuosa indola.</p>
                        <p xml:id="line11" facs="#riga11"> <lb/> Olivia mia perché non scrivi più?</p>
                        <p xml:id="line12" facs="#riga12"> <lb/> Sono vivamente addolorato dal tuo</p>
                        <p xml:id="line13" facs="#riga13"> <lb/> Lungo silenzio, dal tuo tenace <gap reason="illegible" extent="one or two words" atLeast="1" atMost="2" unit="words" /></p>
                        <p xml:id="line14" facs="#riga14"> <lb/> E' colpa della sosta?</p>
                        <p xml:id="line15" facs="#riga15"> <lb/> Tu mi pensi e mi ami sempre?</p>
                        <p xml:id="line16" facs="#riga16"> <lb/> <distinct>Evvero<ptr target="des"/></distinct> Oliva, scrivilo subito</p>
                        <p xml:id="line17" facs="#riga17"> <lb/> subito, riconfermalo. Ho bisogno</p>
                        <p xml:id="line18" facs="#riga18"> <lb/> delle tue amorevoli parole, sai?</p>
                        <p xml:id="line19" facs="#riga19"> <lb/> Con tantissimo ed immutato</p>
                        <p xml:id="line20" facs="#riga20"> <lb/> affetto </p> 
                        <closer xml:id="lineFirma" facs="#firma">  tuo  <signed> <persName ref="#GC"> <forename type="diminutivo" > Giovannino </forename> </persName> </signed></closer> 
                    </div>
                </div>
            </div>
        </body>
        
        <back>
            <div>
                
                <entry xml:id="des10"> 
                    <sense>
                        <distinct type="forma_desueta"> ch'aleggia </distinct> 
                        <xr type="syn"> 
                            <ref> che si diffonde </ref> 
                        </xr> 
                    </sense>
                    <sense>
                        <distinct type="forma_desueta">artifizio</distinct>
                        <xr type="syn">
                            <ref>artificio</ref>
                        </xr>
                    </sense>
                    <sense>
                        <distinct type="forma_desueta">Evvero </distinct>
                        <xr type="syn">
                            <ref>è vero</ref>
                        </xr>
                    </sense>
                </entry>
                
            </div>
        </back>
