							<persName ref="list.xml#Anto">
								<forename type="diminutive">antonietta</forename>
							</persName>,
							<lb xml:id="i092R_ln_07" n="6" facs="#i092R_line_7"/> il babbo, la zia e la
							<persName ref="list.xml#Giova">
								<forename type="diminutive">Giovannetta</forename>
							</persName>.
							<lb xml:id="i092R_ln_08" n="7" facs="#i092R_line_08"/> Per sempre tuo
