<tei:TEI xmlns:tei="http://www.tei-c.org/ns/1.0" xml:id="cartolina_7694-022">
   <tei:teiHeader/>
   <tei:text>
      <tei:front/>
      <tei:body>
         <tei:div type="retro">
            <tei:div type="message">
               <tei:opener xmlns="http://www.tei-c.org/ns/1.0">
                  <tei:dateline>
                     <tei:lb/>
                     <tei:s>            li 9/12-1916</tei:s>
                  </tei:dateline>
               </tei:opener>
               <tei:div xmlns="http://www.tei-c.org/ns/1.0" type="postcard-body">
                  <tei:p>
                     <tei:lb/>            Oliva,<tei:lb/>            Sono felice di annunziarti che <tei:lb/>            salvo complicazioni per il giorno <tei:lb/>            di Natale sarò a casa ed il primo <tei:lb/>            del novello anno sarò da te.<tei:lb/>            Io spero che questi pochi giorni <tei:lb/>            che mi restano d'ansia <tei:lb/>            posfa pasfarli quietamente. <tei:lb/>            Anche da Spezia seguiterò a scri-<tei:lb/>            verti giornalmente e ti darò <tei:lb/>            più volte indicazioni. <tei:lb/>            Per tanto il fuoco ardente che <tei:lb/>            m'arde nelle vene <tei:gap reason="illegible"/>
                     <tei:lb/>
                     <tei:gap reason="illegible"/> vigore pensando che presto <tei:lb/>            potrò riabbracciarti. Ora ho molto <tei:lb/>            da fare per le consegne. <tei:lb/>            Amami tanto  </tei:p>
                  <tei:p type="fronte"/>
               </tei:div>
               <tei:closer xmlns="http://www.tei-c.org/ns/1.0">
                  <tei:s>
                     <tei:lb/>un bacio tuo <tei:signed>
                        <tei:persName>
                           <tei:forename ref="Giovannino">Giovannino</tei:forename>
                        </tei:persName>
                     </tei:signed>
                  </tei:s>
               </tei:closer>
            </tei:div>
            <tei:div type="postmark-postage">
               <tei:ab/>
            </tei:div>
            <tei:div type="secondamano">
               <tei:ab type="paratext">
                  <tei:add/>
               </tei:ab>
            </tei:div>
         </tei:div>
      </tei:body>
   </tei:text>
</tei:TEI>
