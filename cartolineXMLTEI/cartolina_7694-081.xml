   <tei:teiHeader/>
   <tei:text>
      <tei:front/>
      <tei:body>
         <tei:div type="retro">
            <tei:div type="message">
               <tei:opener xmlns="http://www.tei-c.org/ns/1.0">
                  <tei:dateline>
                     <tei:lb/>
                     <tei:s>            Modena, li 7/1-1918.</tei:s>
                  </tei:dateline>
               </tei:opener>
               <tei:div xmlns="http://www.tei-c.org/ns/1.0" type="postcard-body">
                  <tei:p>
                     <tei:lb/>            Ti penso tanto tanto con infi-<tei:lb/>            nita tenerezza, con pasfione qua- <tei:lb/>            si con gioia sing-lare, profonda.</tei:p>
                  <tei:p type="fronte"/>
               </tei:div>
               <tei:closer xmlns="http://www.tei-c.org/ns/1.0">
                  <tei:s>
                     <tei:lb/>Un bacio soavisfimo <tei:lb/>sempre tuo <tei:lb/>
                     <tei:signed>
                        <tei:persName>
                           <tei:forename ref="Giovannino">Giovannino</tei:forename>
                        </tei:persName>
                     </tei:signed>
                  </tei:s>
               </tei:closer>
            </tei:div>
            <tei:div xmlns="http://www.tei-c.org/ns/1.0" type="address-destination">
               <tei:p>
                  <tei:address>
                     <tei:addrLine>
                        <tei:lb/>            Gent. Sig.na <tei:lb/>            Oliva Turtura<tei:lb/>            Via Girolamo Rosfi 58<tei:lb/>            Ravenna</tei:addrLine>
                  </tei:address>
               </tei:p>
            </tei:div>
            <tei:div type="postmark-postage">
               <tei:ab/>
            </tei:div>
            <tei:div type="secondamano">
               <tei:ab type="paratext">
                  <tei:add/>
               </tei:ab>
            </tei:div>
         </tei:div>
      </tei:body>
   </tei:text>
